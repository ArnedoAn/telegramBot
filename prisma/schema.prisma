generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Tarjeta {
  id              String      @id
  saldoDisponible Float
  historial       Historial[]
}

model Historial {
  id        Int      @id @default(autoincrement())
  fecha     DateTime
  monto     Float
  tarjetaId String
  tarjeta   Tarjeta  @relation(fields: [tarjetaId], references: [id])
}
